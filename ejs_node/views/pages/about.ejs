<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('../partials/head'); %>
  </head>
  <body class="container">
    <header><%- include('../partials/header', {topic: "EJS_About"}); %></header>

    <main>
      <div class="row">
        <div class="col-sm-8">
          <div class="jumbotron">
            <h1>This is great</h1>
            <p>Welcome to templating using EJS</p>
          </div>
        </div>

        <div class="col-sm-4">
          <div class="well">
            <!--Side Bar-->
            <!--Rendering Lists-->
            <ul>
              <% mascots.forEach(mascot => { %>
              <li>
                <strong><%= mascot.name %></strong>
                representing <%= mascot.organization %>, born <%= mascot.birth_year
                %>
              </li>
              <% }); %>
            </ul>
          </div>
        </div>
      </div>
    </main>

    <footer><%- include('../partials/footer'); %></footer>
  </body>
</html>
